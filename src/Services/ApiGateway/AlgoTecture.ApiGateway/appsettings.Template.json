{
  "Kestrel": {
    "Endpoints": {}
  },
  "ReverseProxy": {
    "Routes": {
      "identities_route": {
        "ClusterId": "identities_cluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      },
      "users_route": {
        "ClusterId": "users_cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/user" }
        ]
      },
      "spaces_route": {
        "ClusterId": "spaces_cluster",
        "Match": {
          "Path": "/space/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/space" }
        ]
      },
      "reservations_route": {
        "ClusterId": "reservations_cluster",
        "Match": {
          "Path": "/reservation/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/reservation" }
        ]
      }
    },
    "Clusters": {
      "identities_cluster": {
        "Destinations": {
          "identities_api": { "Address": "http://algotecture_identity:8080/" }
        }
      },
      "users_cluster": {
        "Destinations": {
          "users_api": { "Address": "http://algotecture_user:8080/" }
        }
      },
      "spaces_cluster": {
        "Destinations": {
          "spaces_api": { "Address": "http://algotecture_space:8080/" }
        }
      },
      "reservations_cluster": {
        "Destinations": {
          "reservations_api": { "Address": "http://algotecture_reservation:8080/" }
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "MassTransit": "Error",
        "System.Net.Http": "Information",
        "Refit": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Seq", "Args": { "serverUrl": "http://seq:80" } }
    ]
  }
}
