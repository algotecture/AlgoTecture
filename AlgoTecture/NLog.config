<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="">


  <!-- the targets to write to -->
  <targets>
    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target xsi:type="File" name="ownFile-web" fileName="${specialfolder:folder=CommonApplicationData}${var:fileNameDir}nlog_algotecturemvp_app.log"
            layout="${longdate}|${identity}|${threadid}|${threadname}|${event-properties:item=EventId.Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=toString}" 
            archiveFileName="${specialfolder:folder=CommonApplicationData}${var:archiveFileNameDir}log_${shortdate}.{#}.txt"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="5"
            concurrentWrites="true"/>            

    <!-- write to the void aka just remove -->
    <target xsi:type="Null" name="blackhole" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="Microsoft.*" minlevel="Debug" writeTo="blackhole" final="true" />
    <logger name="*" minlevel="debug" writeTo="ownFile-web" />
  </rules>
</nlog>